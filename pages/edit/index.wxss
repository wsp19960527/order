/* 仅编辑页内的 picker 点击区域与占位样式 */
.picker>view {
  width: 100%;
  display: block;
  height: 72rpx;
  line-height: 72rpx;
  pointer-events: none;
}

.picker-label {
  width: 100%;
  display: block;
  height: 72rpx;
  line-height: 72rpx;
  pointer-events: none;
}

.picker-placeholder {
  color: #c0c4cc;
}

.btn-block {
  width: 100%;
  display: block;
}

picker,
.picker {
  background-color: #fff;
  border: 1rpx solid #dde3ea;
  border-radius: 12rpx;
  height: 72rpx;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 72rpx;
  font-size: 28rpx;
}

.footer-fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 1rpx solid #eaeef3;
  padding: 16rpx 24rpx;
  box-shadow: 0 -8rpx 24rpx rgba(64, 169, 255, 0.06);
}

.footer-inner {
  display: block;
  width: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.footer-inner .btn-primary {
  width: 100%;
  display: block;
}

.footer-space {
  height: 120rpx;
}
