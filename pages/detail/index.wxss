/* 详情页底部按钮固定与安全区占位 */
.footer-fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 1rpx solid #eaeef3;
  padding: 16rpx 24rpx;
  box-shadow: 0 -8rpx 24rpx rgba(64, 169, 255, 0.06);
}
.footer-inner {
  display: block;
  width: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.footer-space { height: 120rpx; }

.actions-equal button {
  flex: 1;
}
